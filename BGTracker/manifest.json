{
    "manifest_version": 2,
    "name": "BG Tracker",
    "version": "1.0",
    "description": "Allows the user to track and record BG prices from various websites.",
    "icons": 
    {   
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    "browser_action": 
    {
        "default_icon": "icon16.png",
        "default_popup": "popup.html",
        "default_title": "BG Tracker"
    },

    "permissions": [
        "storage"
    ],

    "web_accessible_resources": [
        "statistics.html"
    ]
        
}